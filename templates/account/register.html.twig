{% block body_class %}login-page{% endblock %}

{% block body %}

    <div class="container">
        {# Logo #}
        <a class="navbar-brand" href="#">skycop24</a>

        <div class="row">
            <div class="col-md-16 offset-md-4 col-lg-10 offset-lg-7 h-pb60">
                <div class="panel-box">
                    {{ form_start(form) }}

                    <h2>Registration</h2>

                        {# Email #}
                        {#<div class="form-group h-mb30 ">
                            <input type="email"
                                   class="form-control"
                                   name="_username"
                                   placeholder="Enter your email"
                                   value=""
                                   required>
                        </div>#}

                        {# Password #}
                        {#<div class="form-group h-mb30 ">
                            <input type="password"
                                   class="form-control"
                                   name="_password"
                                   placeholder="Enter password"
                                   minlength="8"
                                   required>
                        </div>#}

                        {{ form_row(form.email) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.country) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.password.first, {'label': 'Password'}) }}
                        {{ form_row(form.password.second, {'label': 'Repeat password'}) }}

                        <button type="submit" class="btn btn-primary h-mt25 btn-block">Register</button>

                        <hr class="dashed h-mb15">

                        <div class="row">
                            <div class="col-14">Already have an account?</div>
                            <div class="col-10 text-right">
                                <a href="{{ path('login') }}" class="btn btn-sm btn-secondary">Login</a>
                            </div>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>

{% endblock %}